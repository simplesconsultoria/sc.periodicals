<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      i18n:domain="sc.periodicals">
<body>

<tal:viewlet condition="view/available">
  <div class="periodical-header">
    <a href="" tal:attributes="href view/periodical_url"></a>
    <span i18n:translate="">Issue</span> <span tal:content="view/number" />,
    <span tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime;
                      publication_date nocall:view/publication_date"
          tal:content="python:publication_date('%B %Y')" />
  </div>
</tal:viewlet>

</body>
</html>
